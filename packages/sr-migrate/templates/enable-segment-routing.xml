<config-template xmlns="http://tail-f.com/ns/config/1.0">
  <devices xmlns="http://tail-f.com/ns/ncs">
    <device>
      <name>{name}</name>
      <config>
        <?save-context router?>
        <?set-root-node {/sr-migrate:sr-infrastructure}?>

        <!-- NETCONF -->
        <sr xmlns="http://cisco.com/ns/yang/Cisco-IOS-XR-segment-routing-ms-cfg">
         <global-block>
          <lower-bound>{/srgb/lower-bound}</lower-bound>
          <upper-bound>{/srgb/upper-bound}</upper-bound>
         </global-block>
        </sr>
        <isis xmlns="http://cisco.com/ns/yang/Cisco-IOS-XR-clns-isis-cfg">
          <instances>
            <instance>
              <instance-name>{../name}</instance-name>
              <afs>
                <af>
                  <af-name>{address-family}</af-name>
                  <saf-name>unicast</saf-name>
                  <af-data>
                    <segment-routing>
                      <mpls>ldp</mpls>
                    </segment-routing>
                  </af-data>
                </af>
              </afs>
              <interfaces>
                <interface>
                  <interface-name>Loopback{loopback}</interface-name>
                  <interface-afs>
                    <interface-af>
                      <af-name>{address-family}</af-name>
                      <saf-name>unicast</saf-name>
                      <interface-af-data>
                        <prefix-sid>
                          <type>absolute</type>
                          <?switch-context router?>
                          <value>{prefix-sid}</value>
                          <php>enable</php>
                          <explicit-null>disable</explicit-null>
                          <nflag-clear>disable</nflag-clear>
                        </prefix-sid>
                      </interface-af-data>
                    </interface-af>
                  </interface-afs>
                  <running/>
                </interface>

                <!-- TF-LFA on all interfaces (exluding Loopback) -->
                <?switch-context router?>
                <interface foreach="{deref(name)/../config
                                    /clns-isis-cfg:isis/instances
                                    /instance[instance-name=current()/../name]
                                    /interfaces/interface[not(starts-with(
                                      interface-name, 'Loopback'))]}">
                  <interface-name>{interface-name}</interface-name>
                  <interface-afs>
                    <?switch-context router?>
                    <interface-af>
                      <af-name>{../address-family}</af-name>
                      <saf-name>unicast</saf-name>
                      <interface-af-data>
                        <interface-frr-table>
                          <frrtilfa-types>
                            <frrtilfa-type>
                              <level>not-set</level>
                            </frrtilfa-type>
                          </frrtilfa-types>
                          <frr-types>
                            <frr-type>
                              <level>not-set</level>
                              <type>per-prefix</type>
                            </frr-type>
                          </frr-types>
                        </interface-frr-table>
                      </interface-af-data>
                    </interface-af>
                  </interface-afs>
                  <running/>
                </interface>

              </interfaces>
              <running/>
            </instance>
          </instances>
        </isis>

        <!-- CLI -->
        <segment-routing xmlns="http://tail-f.com/ned/cisco-ios-xr">
          <global-block>
            <lower-bound>{/srgb/lower-bound}</lower-bound>
            <upper-bound>{/srgb/upper-bound}</upper-bound>
          </global-block>
        </segment-routing>
        <router xmlns="http://tail-f.com/ned/cisco-ios-xr">
          <isis>
            <tag>
              <name>{../name}</name>
              <address-family>
                <ipv4>
                  <unicast>
                    <segment-routing>
                      <mpls/>
                    </segment-routing>
                  </unicast>
                </ipv4>
              </address-family>
              <interface>
                <name>Loopback{loopback}</name>
                <interface-type>passive</interface-type>
                <circuit-type>level-2-only</circuit-type>
                <address-family>
                  <ipv4>
                    <unicast>
                      <prefix-sid>
                        <?switch-context router?>
                        <absolute>{prefix-sid}</absolute>
                      </prefix-sid>
                    </unicast>
                  </ipv4>
                </address-family>
              </interface>

              <!-- TF-LFA on all interfaces (exluding Loopback) -->
              <?switch-context router?>
              <interface foreach="{deref(name)/../config/cisco-ios-xr:router
                                    /isis/tag[name=current()/../name]
                                    /interface[not(starts-with(
                                      name, 'Loopback'))]}">
                <name>{name}</name>
                <circuit-type>level-2-only</circuit-type>
                <point-to-point/>
                <address-family>
                  <ipv4>
                    <unicast>
                      <metric>1</metric>
                      <fast-reroute>
                        <enable>
                          <per-prefix/>
                        </enable>
                        <per-prefix>
                          <ti-lfa/>
                        </per-prefix>
                      </fast-reroute>
                    </unicast>
                  </ipv4>
                </address-family>
              </interface>

            </tag>
          </isis>
        </router>
      </config>
    </device>
  </devices>
</config-template>
